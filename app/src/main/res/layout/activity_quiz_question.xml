<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".QuizQuestionActivity">

    <TextView
        android:id="@+id/app_title_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Code Craft"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_icon_quiz"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:contentDescription="Close"
        android:focusable="true"
        android:src="@drawable/close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Question 5/15"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_title_quiz" />

    <androidx.cardview.widget.CardView
        android:id="@+id/question_card"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#D1C4E9"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_progress_text">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp"
            android:text="Java Adalah bla bla"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Time"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_card" />

    <ProgressBar
        android:id="@+id/time_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progress="70"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="#FFC107"        app:layout_constraintTop_toTopOf="@id/time_label"
app:layout_constraintBottom_toBottomOf="@id/time_label"
        app:layout_constraintEnd_toStartOf="@id/time_value"
        app:layout_constraintStart_toEndOf="@id/time_label" />

    <TextView
        android:id="@+id/time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="10.00"
        android:textColor="@android:color/black"
        android:textSize="16sp"     app:layout_constraintBaseline_toBaselineOf="@id/time_label"

        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/answer_button"
            style="@style/ActionButtonStyle"
            android:text="5/15\nAnswer" />

        <Button
            android:id="@+id/audience_button"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="16dp"
            android:drawableTop="@drawable/audience_icon"
            android:paddingTop="8dp"
            android:text="Audience" />

        <Button
            android:id="@+id/flag_button"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="16dp"
            android:drawableTop="@drawable/flag_icon"
            android:paddingTop="8dp"
            android:text="Flag" />

        <Button
            android:id="@+id/skip_button"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="16dp"
            android:drawableTop="@drawable/skip_icon"
            android:paddingTop="8dp"
            android:text="Skip" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:text="Answer A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:text="Answer B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="455dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:text="Answer C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="511dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:text="Answer D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="567dp" />

</androidx.constraintlayout.widget.ConstraintLayout>