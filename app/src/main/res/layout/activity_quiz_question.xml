<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".QuizQuestionActivity">

    <TextView
        android:id="@+id/app_title_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code Craft"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_icon_quiz"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Close" />

    <TextView
        android:id="@+id/question_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 5/15"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/app_title_quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/question_card"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="#D1C4E9" app:layout_constraintTop_toBottomOf="@id/question_progress_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Java Adalah bla bla" android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/question_card"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/time_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progress="70" android:progressTint="#FFC107" android:progressBackgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBaselineOf="@id/time_label"
        app:layout_constraintStart_toEndOf="@id/time_label"
        app:layout_constraintEnd_toStartOf="@id/time_value" />

    <TextView
        android:id="@+id/time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.00"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBaselineOf="@id/time_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/option_a_card"
        style="@style/AnswerOptionCardStyle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/time_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/option_a_text"
            style="@style/AnswerOptionTextStyle"
            android:text="Opsi Jawaban A" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option_b_card"
        style="@style/AnswerOptionCardStyle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/option_a_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/option_b_text"
            style="@style/AnswerOptionTextStyle"
            android:text="Opsi Jawaban B" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option_c_card"
        style="@style/AnswerOptionCardStyle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/option_b_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/option_c_text"
            style="@style/AnswerOptionTextStyle"
            android:text="Opsi Jawaban C" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option_d_card"
        style="@style/AnswerOptionCardStyle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/option_c_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/option_d_text"
            style="@style/AnswerOptionTextStyle"
            android:text="Opsi Jawaban D" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/answer_button"
            style="@style/ActionButtonStyle"
            android:text="5/15\nAnswer" />

        <Button
            android:id="@+id/audience_button"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="16dp"
            android:text="Audience"
            android:drawableTop="@drawable/ic_audience"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/flag_button"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="16dp"
            android:text="Flag"
            android:drawableTop="@drawable/ic_flag"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/skip_button"
            style="@style/ActionButtonStyle"
            android:layout_marginStart="16dp"
            android:text="Skip"
            android:drawableTop="@drawable/ic_skip"
            android:paddingTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>