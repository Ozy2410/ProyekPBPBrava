<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/codecraft_logo_square"
            android:contentDescription="Quiz Icon"/>

        <TextView
            android:id="@+id/bookmark_title_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Lord Inheritance" />

        <ImageButton
            android:id="@+id/unbookmark_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bookmark_icon"
            app:tint="@color/purple_darker"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Unbookmark this quiz"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
